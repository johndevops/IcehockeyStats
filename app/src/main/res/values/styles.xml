<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Large" parent="AppTheme">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="AppTheme.Home" parent="AppTheme">
        <item name="android:background">#666666</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Home.Large" parent="AppTheme.Home">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="AppTheme.Guest" parent="AppTheme">
        <item name="android:background">#CCCCCC</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Guest.Large" parent="AppTheme.Guest">
        <item name="android:textSize">32sp</item>
    </style>


</resources>
